+            .clickable { onClick() }
+            .padding(horizontal = 12.dp, vertical = 8.dp)
+    ) {
+        Icon(icon, contentDescription = null)
+        Spacer(modifier = Modifier.height(0.dp))
+        Text(text = label, modifier = Modifier.padding(start = 8.dp))
+    }
+}
